---
title: Steven Harford
---

<header class="introduction" role="banner">
    <div class="wrapper">
        <div class="content">
            <h1><%= link_to 'Steven Harford', 'http://www.stevenharford.com/' %></h1>

            <p>Family Guy &ndash; Computer Geek</p>
        </div>
    </div>
</header>

<main role="main">
    <section class="profile">
        <div class="wrapper">
            <div class="content">
                <h1>Profile</h1>

                <p><%= lorem.paragraph %></p>
            </div>
        </div>
    </section>

    <section class="timeline">
        <div class="wrapper">
            <div class="content">
                <h1 class="timeline-heading">Timeline</h1>

                <ol class="timeline-events">
                    <% 1.upto(12) do |i| %>
                        <li class="timeline-event">
                            <figure>
                                <%= image_tag lorem.image('300x200', :random_color => true), :alt => "Photograph of Steven Harford" %>
                                <figcaption>Photograph of Steven Harford</figcaption>
                            </figure>
                        </li>
                    <% end %>
                </ol>
            </div>
        </div>
    </section>

    <section class="contact">
        <div class="wrapper">
            <div class="content">
                <h1>Contact</h1>

                <ul>
                    <li>
                        <% link_to 'https://github.com/stevenharford' do %>
                            <span class="fa fa-github"></span> GitHub
                        <% end %>
                    </li>
                    <li>
                        <% link_to 'mailto:steven@stevenharford.com' do %>
                            <span class="fa fa-envelope"></span> Email
                        <% end %>
                    </li>
                </ul>
            </div>
        </div>
    </section>
</main>

<footer class="copyright" role="contentinfo">
    <div class="wrapper">
        <div class="content">
            &copy; 2011&ndash;<%= Date.today.year %> Steven Harford
        </div>
    </div>
</footer>
