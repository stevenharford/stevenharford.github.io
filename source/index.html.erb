<header class="banner" role="banner">
    <div class="wrapper">
        <div class="content">
            <h1 class="banner-heading"><%= link_to 'Steven Harford', 'http://www.stevenharford.com/' %></h1>

            <p class="banner-tagline">Family Guy &ndash; Computer Geek</p>
        </div>
    </div>
</header>

<main role="main">
    <section class="profile">
        <div class="wrapper">
            <div class="content">
                <h1 class="profile-heading">Profile</h1>

                <p class="profile-description">
                    Hi there! I'm Steven, a super proud family guy and total
                    computer geek. Mostly, I split my time between playing with
                    my kids and playing on my computer (ahem, working). I hope,
                    as this site grows, you'll come back to see what I've been
                    getting up to. In the meantime, why not explore the photos
                    below to discover what I'm about.
                </p>
            </div>
        </div>
    </section>

    <section class="timeline">
        <div class="wrapper">
            <div class="content">
                <h1 class="timeline-heading">Timeline</h1>

                <ol class="timeline-events">
                    <% current_page.data.timeline_events.each do |timeline_event| %>
                        <li class="timeline-event">
                            <figure>
                                <%= image_tag timeline_event.photo, :class => "timeline-event-photo", :alt => "" %>

                                <figcaption>
                                    <h2 class="timeline-event-heading"><%= timeline_event.heading %></h2>
                                    <p class="timeline-event-description"><%= timeline_event.description %></p>
                                </figcaption>
                            </figure>
                        </li>
                    <% end %>
                </ol>
            </div>
        </div>
    </section>

    <section class="contact">
        <div class="wrapper">
            <div class="content">
                <h1 class="contact-heading">Contact</h1>

                <ul class="contact-list">
                    <li class="contact-list-item">
                        <% link_to 'https://github.com/stevenharford' do %>
                            <span class="contact-list-item-icon fa fa-github"></span>
                            <span class="contact-list-item-name">GitHub</span>
                        <% end %>
                    </li>
                    <li class="contact-list-item">
                        <% link_to 'mailto:steven@stevenharford.com' do %>
                            <span class="contact-list-item-icon fa fa-envelope"></span>
                            <span class="contact-list-item-name">Email</span>
                        <% end %>
                    </li>
                </ul>
            </div>
        </div>
    </section>
</main>

